{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s %(name)s:%(lineno)s %(funcName)s [%(levelname)s]: %(message)s"
        }
    },

    "handlers": {
        "consoleHandler": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
    	"fileHandler": {
	    "class": "logging.handlers.RotatingFileHandler",
	    "level": "INFO",
            "formatter": "simple",
            "filename": "log.log",
	    "encoding": "utf-8",
	    "maxBytes": 1048576,
    	    "backupCount": 10
    	}
    },

    "loggers": {
        "__main__": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "file_process": {
            "level": "INFO",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "adc081c021": {
            "level": "INFO",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "lis2dh12": {
            "level": "INFO",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "j1939": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "can_communication": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "pvsw_master": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "pvsw_slave": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "pvsw_parameter": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "seismometer": {
            "level": "INFO",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        },
        "soft_config": {
            "level": "DEBUG",
            "handlers": ["consoleHandler", "fileHandler"],
            "propagate": false
        }
    },

    "root": {
        "level": "INFO"
    }
}
